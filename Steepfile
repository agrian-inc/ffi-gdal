# frozen_string_literal: true

target :lib do
  signature 'sig', 'sig-gems'

  check 'lib' # Directory name

  # Standard libraries
  library 'date',
    'logger',
    'forwardable',
    'logger',
    'monitor'
end

target :lib_ffi do
  signature 'sig', 'sig-gems'

  check 'lib/ffi/' # Directory name

  library 'date',
    'logger',
    'forwardable',
    'logger',
    'monitor'
end

